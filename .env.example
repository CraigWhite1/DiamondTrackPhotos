# Server
PORT=3000

# FastAPI (used to fetch cert number and lab)
FASTAPI_BASE_URL=https://your-fastapi.example.com
FASTAPI_JEWELRY_PATH=/jewelry
FASTAPI_DIAMONDS_PATH=/colorDiamonds
FASTAPI_API_KEY=your-fastapi-key
FASTAPI_AUTH_HEADER=x-api-key
FASTAPI_AUTH_VALUE=
FASTAPI_TIMEOUT_MS=5000

# GIA (primary source when lab === GIA) - direct GraphQL
GIA_BASE_URL=https://api.reportresults.gia.edu/
GIA_API_KEY=your-gia-key
GIA_AUTH_HEADER=Authorization
GIA_AUTH_VALUE=
GIA_TIMEOUT_MS=5000

# Blob fallback for media/certs when APIs are unavailable
BLOB_BASE_URL=https://gemelody.blob.core.windows.net
BLOB_MEDIA_CONTAINER=img
BLOB_CERT_CONTAINER=certslotname

# Local mocks for offline testing
USE_MOCKS=true
MOCK_CERT_PATH=./mocks/certs.sample.json

# Legacy SQL fallback (set to true only if you still need it)
USE_SQL_FALLBACK=false
SQL_SERVER=
SQL_DATABASE=
SQL_USER=
SQL_PASSWORD=
SQL_PORT=1433
