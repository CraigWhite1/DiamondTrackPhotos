			<% for(var i=0; i < details.length; i++) { %>
   				<div class="embed-responsive" style="padding-bottom: 100%;">
					<iframe onload="frameload()" src = "https://gemelody.blob.core.windows.net/img/<%= details[i].Cert %>.pdf" onerror="this.style.display='none'">
					</iframe>
				</div>
			<% } %>
		</div>
	</div>
</div>


